<%= render 'sidebar' %>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <%= bootstrap_flash %>
  <h1 class="page-header">Proveedores</h1>
  <div class="row">
    <%= form_tag(providers_path, :method => "get", id: "providers-search-form", role: "search") do %>
      <div class="col-lg-8">
        <div class="input-group">
          <span class="input-group-btn">
            <%= button_tag(type: 'submit', class: "btn btn-default") do %>
              Buscar
            <% end %>
          </span>
          <%= text_field_tag :search, params[:search], class: "form-control", value: params[:search], placeholder: 'Ingrese el nombre, correo o telefono...' %>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-8 -->
      <div class="col-lg-4">
        <%= select_tag(:ordering, options_for_select([ ['Mas reciente', "0"], ['Mas antiguo', "1"], ['Nombre A-Z', "2"], ['Nombre Z-A', "3"], ['Correo A-Z', "4"], ['Correo Z-A', "5"] ], :selected => params[:ordering] ), {:class => 'form-control'})  %> 
      </div><!-- /.col-lg-4 -->
    <% end %>
  </div> 
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th></th>
        <th class="text-center">RIF</th>
        <th>Correo electrónico</th>
        <th>Telefono</th>
        <th class="text-center">Dirección</th>
        <th class="text-center">Comentario</th>
      </tr>
    </thead>
    <tbody>
      <% @providers.each do |provider| %>
        <tr>
          <td><%= provider.id %></td>
          <td><%= link_to provider.name, provider %></td>
          <td class="text-center"><%= provider.provider_type.name %></td>
          <td class="text-center"><%= provider.rif.present? ? provider.rif : "-" %></td>
          <td><%= provider.email %></td>
          <td><%= number_to_phone(provider.phone, delimiter: " ") %></td>
          <td class="text-center"><%= provider.address.present? ? provider.address : "-" %></td>
          <td class="text-center"><%= provider.comment.present? ? provider.comment : "-" %></td>
          <td class="text-center">
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-gear"></i> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Ver detalle', provider %></li>
                <li><%= link_to 'Editar', edit_provider_path(provider) %></li>
                <li><%= link_to 'Eliminar', provider, method: :delete, data: { confirm: '¿Seguro que deseas eliminar a ' + provider.name + '?' } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>